datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

model Document {
  id        String   @id @default(uuid())
  content   String
  metadata  String?
  createdAt DateTime @default(now())
  chunks    Chunk[]
}

model Chunk {
  id         String   @id @default(uuid())
  documentId String
  content    String
  embedding  String
  position   Int
  createdAt  DateTime @default(now())
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId])
}
